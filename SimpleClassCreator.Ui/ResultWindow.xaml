<Window x:Class="SimpleClassCreator.Ui.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ResultWindow" Height="548" Width="528">
    <Grid>
        <TextBox Name="TxtResult" IsReadOnly="True" IsReadOnlyCaretVisible="True" HorizontalContentAlignment="Stretch" HorizontalScrollBarVisibility="Auto" VerticalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto" Background="Black" Foreground="White" FontFamily="Courier New" FontSize="14" />
        <ToolBarTray Height="27" VerticalAlignment="Bottom">
            <ToolBar Margin="0,0,-520,0">
                <Button Name="BtnCopy" Click="BtnCopy_Click">
                    <Image Source="images/Copy_16x.png" ToolTip="Copy to clipboard" />
                </Button>
                <Button Name="BtnSave" Click="BtnSave_OnClick">
                    <Image Source="images/SaveAs_16x.png" ToolTip="Save as..." />
                </Button>
            </ToolBar>
        </ToolBarTray>
    </Grid>
</Window>
